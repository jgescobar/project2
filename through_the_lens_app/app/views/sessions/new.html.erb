<div class="col-sm-6 col-sm-offset-1">
<div id="wholepage">
  <h1 class="text-center">Through The Lens</h1>
  <!-- this is the bootstrap I'd like my login features to look like. -->

  <p id="alert"><%= alert %></p>

  <div id="loginform">
  <%= form_tag sessions_path, {class: "form-inline"} do %>
    <div class="form-group">
      <%= text_field_tag :email, nil, {class: "form-control", placeholder: "Email"} %>
    </div>
    <div class="form-group">
      <%= password_field_tag :password, nil, {class: "form-control", placeholder: "Password"} %>
    </div>
    <%= submit_tag "Submit", {class: "btn btn-default"}%>
  <% end %>
  </div>
  <br><br>

</div>
</div>
