
<!DOCTYPE html>
<html>
<head>
  <title>ThroughTheLens</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
</head>
<body>


<nav class="navbar navbar-inverse">
  <div class="container">
    <div class="container-fluid">

      <div class="navbar-header">
        <%= link_to home_path, class: "navbar-brand" do %>
          HOME
        <% end %>

        <button type="button" class="navbar-toggle collapsed navbar-right" data-toggle="collapse" data-target="#nav-collapse" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>

        <% if current_user %>
          <%= link_to "Art", shares_path(category: "Art"), class: "btn btn-default navbar-btn", class: "btn btn-danger", type: "button" %>
          <%= link_to "Music", shares_path(category: "Music"), class: "btn btn-default navbar-btn", class: "btn btn-success" %>
          <%= link_to "Coffeeshops", shares_path(category: "Coffeeshops"), class: "btn btn-default navbar-btn", class: "btn btn-info" %>
          <%= link_to "Tech", shares_path(category: "Tech"), class: "btn btn-default navbar-btn", class: "btn btn-warning" %>
          <%= link_to('Your Profile', user_path(current_user), class: "btn btn-default navbar-btn", class: "btn btn-success", type: "button") if params[:controller] != "users" %>
          <%= link_to 'Log Out', session_path(' '), class: "btn btn-default navbar-btn", class: "btn btn-warning", type: "button", method: :delete %>
        <% else %>
          <%= link_to "Sign In", new_session_path, class: "btn btn-default navbar-btn", class: "btn btn-success", type: "button" %>
          <%= link_to "Join the Gang", new_user_path, class: "btn btn-default navbar-btn", class: "btn btn-warning", type: "button" %>
        <% end %>
      </div>
    </div>
  </div>
</nav>


<%= yield %>

</body>

</html>
